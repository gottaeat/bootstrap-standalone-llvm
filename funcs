# vim: set ft=sh:

cleancmake(){
    for i in $(find . -type f -name CMakeLists.txt); do
        echo " ! cleaning: ${i}"
        sed -i -e \
            '/^[[:space:]]*set[[:space:]]*([[:space:]]*CMAKE_BUILD_TYPE\([[:space:]].*)\|)\)/I{s/^/#_cmake_modify_IGNORE /g}' \
            "${i}"
    done
}

